$(".header").on('click', function(){
  alert ($(".col_center").data("page_index"));
});

$(".col_left").on('click', function(){
  if ($(".col_center").data("page_index") != 0) {
    $(".col_center").data("page_index",$(".col_center").data("page_index")-1);
  }
});

$(".col_right").on('click', function(){
  if(true) {
    $(".col_center").data("page_index",$(".col_center").data("page_index")+1);
  }
});

