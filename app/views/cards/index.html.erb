<%= form_tag({action: :index}, remote: true, method: 'get') do %>
  <div class="header">
    <h1>Listing cards</h1>
      <%= text_field_tag 'search'%>
      <%= submit_tag 'submit', id: "submit" %>
      <%= text_field_tag 'page_index', '0' %>
  </div>

  <div>
    <div class="col_left">
      <%= submit_tag 'left', id: "left" %>
    </div>
    <div class="col_right">
      <%= submit_tag 'right', id: "right" %>
    </div>
    <div class="col_center">
      <div>
        <% c = 4 %>
        <% r = 2 %>
        <% r.times do |i| %>
          <div class="section group">
            <% for j in 0...c %>
              <div class="col span_1_of_<%=c%>">
                <img id="card_img_<%=(j+c*i).to_s%>"/>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
