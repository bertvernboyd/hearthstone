<h1>Listing cards</h1>

<%= form_tag({action: :index}, remote: true, method: 'get') do %>
  <%= text_field_tag 'search'%>
  <%= submit_tag '', id: "submit" %>
<% end %>

<div class="section group">
  <div class="col span_1_of_4">
    <img id="card_img_0">
  </div>
  <div class="col span_1_of_4">
    <img id="card_img_1">
  </div>
  <div class="col span_1_of_4">
    <img id="card_img_2">
  </div>
  <div class="col span_1_of_4">
    <img id="card_img_3">
  </div>
</div>

<div class="section group">
  <div class="col span_1_of_4">
    <img id="card_img_4">
  </div>
  <div class="col span_1_of_4">
    <img id="card_img_5">
  </div>
  <div class="col span_1_of_4">
    <img id="card_img_6">
  </div>
  <div class="col span_1_of_4">
    <img id="card_img_7">
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Card type</th>
      <th>Rarity</th>
      <th>Cost</th>
      <th>Attack</th>
      <th>Health</th>
      <th>Player class</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr id=<%=card.tag%>>
        <td id="name"><%= card.name %></td>
        <td><%= card.card_type %></td>
        <td><%= card.rarity %></td>
        <td><%= card.cost %></td>
        <td><%= card.attack %></td>
        <td><%= card.health %></td>
        <td><%= card.player_class %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
